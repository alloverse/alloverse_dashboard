
<%= form_for @changeset, @action, [class: "form-container"], fn f -> %>
  <%= if @changeset.action do %>

    <%#= TODO: STYLE THESE ERROR MESSAGES %>
    <div class="message-card error">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= text_input f, :name, placeholder: "What is your name?" %>
  <%= error_tag f, :name %>

  <%= text_input f, :username, placeholder: "Chose a username" %>
  <%= error_tag f, :username %>

  
    <%= inputs_for f, :credential, fn cf -> %>
      <%= text_input cf, :email, placeholder: "Email" %>
      <%= error_tag cf, :email %>
    <% end %>

     <%= inputs_for f, :credential, fn cf -> %>
      <%= password_input cf, :password, placeholder: "Password" %>
      <%= error_tag cf, :password %>
    <% end %>

    <div class="button-container-vertical">
      <%= submit "Save", [class: "button full-width"] %>
    </div>    

<% end %>