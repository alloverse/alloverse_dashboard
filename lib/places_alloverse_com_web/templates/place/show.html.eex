<!-- Place details -->

<div class="card">
  <div class="card-column-container">
      
    <div class="card-column-container__column-left">
      <div class="column-content">
        <span><%= link "< Back", to: Routes.place_path(@conn, :index) %></span>

        <br />
        <br />

        <h1 class="column-content__header"><%= @place.name %></h2>
        <h4 class="column-content__subheader">
          Created by <%= @place.user.name %> Â· <%= if @place.public === true do "Public" else "Unlisted" end%>
        </h4>
        <p class="column-content__paragraph">
            <%= @place.description %>
        </p>

        <div class="button-container-vertical">
          <%= if @current_user && (@place.user.id === @current_user.id) do link("Edit", to: "/place/#{@place.id}/edit", class: "button neutral large") end %>
          <%= if @current_user && (@place.user.id === @current_user.id) do link "Delete", to: "/place/#{@place.id}", method: :delete, data: [confirm: "Are you sure?"], class: "button neutral large" end %>

          <div class="button large primary">Join (N/A)</div>
        </div>
      </div>
    </div>

    <div class="card-column-container__column-right">
      <img src="http://placekitten.com/800/800" />
    </div>
  </div>
</div>